{% extends 'BolsaBackendBundle::layout.html.twig' %}

{% block body -%}
    <h1>Preinscriptos</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ entity.apellido }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ entity.dni }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Confirmado</th>
                <td>{{ entity.confirmado }}</td>
            </tr>
            <tr>
                <th>Aviso</th>
                <td>{{ entity.aviso|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('backend_preinscriptos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('backend_preinscriptos_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
