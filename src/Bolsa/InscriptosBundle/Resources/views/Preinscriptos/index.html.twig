{% extends 'BolsaBackendBundle::layout.html.twig' %}

{% block body -%}
    <h1>Preinscriptos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Apellido</th>
                <th>Nombre</th>
                <th>Dni</th>
                <th>Email</th>
                <th>Confirmado</th>
                <th>Aviso</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('backend_preinscriptos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.dni }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.confirmado }}</td>
                <td>{% if entity.aviso %}{{ entity.aviso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('backend_preinscriptos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('backend_preinscriptos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('backend_preinscriptos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
